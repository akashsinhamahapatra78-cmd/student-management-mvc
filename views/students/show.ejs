<h2>Student Details</h2>

<div class="student-details" style="background: #f8f9fa; padding: 20px; border-radius: 5px; margin: 20px 0;">
    <p>
        <strong>ID:</strong> <%= student.id %>
    </p>
    <p>
        <strong>Name:</strong> <%= student.name %>
    </p>
    <p>
        <strong>Email:</strong> <a href="mailto:<%= student.email %>"><%= student.email %></a>
    </p>
    <p>
        <strong>Roll Number:</strong> <%= student.rollNumber %>
    </p>
    <p>
        <strong>Enrollment Date:</strong> <%= student.enrollmentDate.toISOString().split('T')[0] %>
    </p>
</div>

<div class="actions">
    <a href="/students/<%= student.id %>/edit" class="btn">Edit</a>
    <a href="/students" class="btn btn-secondary">Back to List</a>
    <form action="/students/<%= student.id %>" method="POST" style="display:inline;">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student?')">Delete</button>
    </form>
</div>
