<h2>Add New Student</h2>

<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <div class="alert alert-error">
        <strong>Please fix the following errors:</strong>
        <ul>
            <% errors.forEach(error => { %>
                <li><%= error %></li>
            <% }); %>
        </ul>
    </div>
<% } %>

<form method="POST" action="/students">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required value="<%= formData ? formData.name : '' %>">
    
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required value="<%= formData ? formData.email : '' %>">
    
    <label for="rollNumber">Roll Number:</label>
    <input type="text" id="rollNumber" name="rollNumber" required value="<%= formData ? formData.rollNumber : '' %>">
    
    <button type="submit" class="btn">Add Student</button>
    <a href="/students" class="btn btn-secondary">Cancel</a>
</form>
